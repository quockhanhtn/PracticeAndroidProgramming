        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                android:layout_height="@dimen/btn_size"
                android:layout_width="@dimen/btn_size"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/CircleButton"
                app:shapeAppearanceOverlay="@style/CircleButton"
                app:backgroundTint="@color/purple_700"
                app:icon="@drawable/minus_thick"
                app:iconSize="@dimen/icon_size"
                app:iconGravity="start"
                android:padding="@dimen/icon_pad"
                tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/row_1"
            android:layout_width="@dimen/row_width"
            android:layout_height="@dimen/row_height"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/row_0"
            app:layout_constraintBottom_toBottomOf="@id/row_0"
            android:layout_marginBottom="@dimen/row_height"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                android:layout_height="@dimen/btn_size"
                android:layout_width="@dimen/btn_size"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/CircleButton"
                app:shapeAppearanceOverlay="@style/CircleButton"
                app:icon="@drawable/numeric_1"
                app:iconSize="@dimen/icon_size"
                app:iconGravity="start"
                android:padding="@dimen/icon_pad"
                tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:layout_height="@dimen/btn_size"
